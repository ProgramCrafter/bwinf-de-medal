              {{#each contest.tasks}}
                <div style="margin: 10px;">
                  {{name}}
   
                  <ul>
                    {{#each subtasks}}
                       <li>
                          {{#if is_time_up}}
                             <button class="button is-link is-outlined">{{linktext}}</button>
                          {{else}}
